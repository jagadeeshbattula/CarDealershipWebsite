@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model CarDealer.Models.ContactUs

@{
    ViewBag.Title = "ViewConacts";
}
<style>
    h2{
        text-align:center;
    }
</style>

<h2>Contacts</h2>
<br />
<p>View customers who left contacts for communication.</p>
<div class="pull-right ui-button">
    <a href="/Admin/AdminLogout">LOG OUT</a>
</div>
<br />
<hr />
<br />

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Date Contacted</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.contacts)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Message)</td>
                    </tr>
                }
            </tbody>
        </table>
<hr />
<br />
<br />
<div>
    @Html.ActionLink("Admin Home", "Index") ||
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
