@model CarDealer.Models.ServiceApointment

@{
    ViewBag.Title = "ServiceAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/bundles/jqueryui")
@Styles.Render("~/Content/cssjqryUi")

<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
  
@section Scripts {
    <script>
        $("#carmakeselected").change(function () {
            if ($(this).data('options') === undefined) {
                $(this).data('options', $('#carmodelselected option').clone());
            }
            var id = $(this).val();
            var options = $(this).data('options').filter('[value=' + id + ']');
            $('#carmodelselected').html(options);
        });
    </script>
    <style>
        h2{
            text-align:center;
        }
    </style>
}


@using (Html.BeginForm("ServiceAppointment", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

